{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "anim",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"name": "comment.line.double-slash",
			"match": "//.*$"
		},
		{
			"begin": "@\\(",
			"beginCaptures": {
			  "0": { "name": "keyword.control.at-sign" }
			},
			"end": "\\)",
			"endCaptures": {
			  "0": { "name": "keyword.control.parenthesis" }
			},
			"name": "meta.condition-block",
			"patterns": [
			  {
				"match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(=>|!=)",
				"captures": {
				  "1": { "name": "variable.other.key" },
				  "2": { "name": "keyword.operator" }
				}
			  },
			  {
				"match": "([A-Za-z_][A-Za-z0-9_]*)",
				"name": "constant.other.value"
			  }
			]
		},
		{
			"name": "variable.other.interpolation",
			"match": "\\$\\$[A-Za-z][A-Za-z0-9]*\\$\\$"
		},
		{
			"include": "#keywords"
		}


	],
	"repository": {
		"keywords": {
			"patterns": [
			{
				"name": "entity.name.class",
				"match": "\\b(sheet|allowedExtraPoints|states|center|metadata)\\b"
			},
			{
				"name": "keyword",
				"match": "\\b(animation)\\b"
			},
			{
				"name": "entity.name.type",
				"match": "\\b(name|fps|playlist|sheet|extrapoints|loop|event|goto|hit|random|trigger|command|frames|untilCommand|duration|file)\\b"
			},
			{
				"name": "constant.language",
				"match": "\\b(yes|no|true|false)\\b"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.multianim",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.anim"
}