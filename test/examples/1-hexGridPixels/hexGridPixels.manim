version: 0.5

#hexGridPixels programmable() {
  pos: 0, 0
  grid: 1280, 720

  @alpha(0.7) bitmap(generated(color(1280, 720, #777)));

  // Pointy-top hex orientation
  point {
    hex: pointy(32, 32)
    pos: 250, 280
    scale: 5
    pixels (
      line $hex.corner(0, 1.1), $hex.corner(1, 1.1), #f00
      line $hex.corner(1, 1.1), $hex.corner(2, 1.1), #0f0
      line $hex.corner(2, 1.1), $hex.corner(3, 1.1), #00f
      line $hex.corner(3, 1.1), $hex.corner(4, 1.1), #ff0
      line $hex.corner(4, 1.1), $hex.corner(5, 1.1), #f0f
      line $hex.corner(5, 1.1), $hex.corner(0, 1.1), #fff
    );

    text(f3x5, "1", white, left):$hex.edge(1, 1.3);
    text(f3x5, "2", white, left):$hex.edge(2, 1.3);
    text(f3x5, "3", white, left):$hex.edge(3, 1.3);
    text(f3x5, "0", white, left):$hex.edge(0, 1.3);
    text(f3x5, "4", white, left):$hex.edge(4, 1.3);
    text(f3x5, "5", white, left):$hex.edge(5, 1.3);

      line(blue, 1, $hex.edge(4, 1.1), $hex.edge(4, 2));
     @scale(0.4)text(dd, "pointy(32, 32)", white):$hex.edge(4, 2)
  }

  // Flat-top hex orientation
  point {
    hex: flat(32, 32)
    pos: 750, 280
    scale: 5
    pixels (
      line $hex.corner(0, 1.1), $hex.corner(1, 1.1), #f00
      line $hex.corner(1, 1.1), $hex.corner(2, 1.1), #0f0
      line $hex.corner(2, 1.1), $hex.corner(3, 1.1), #00f
      line $hex.corner(3, 1.1), $hex.corner(4, 1.1), #ff0
      line $hex.corner(4, 1.1), $hex.corner(5, 1.1), #f0f
      line $hex.corner(5, 1.1), $hex.corner(0, 1.1), #fff
    );

    text(f3x5, "1", white, left):$hex.corner(1, 1.3);
    text(f3x5, "2", white, left):$hex.corner(2, 1.3);
    text(f3x5, "3", white, left):$hex.corner(3, 1.3);
    text(f3x5, "0", white, left):$hex.corner(0, 1.3);
    text(f3x5, "4", white, left):$hex.corner(4, 1.3);
    text(f3x5, "5", white, left):$hex.corner(5, 1.3);


    line(blue, 1, $hex.edge(4, 1.1), $hex.edge(4, 2));
    @scale(0.4) text(dd, "flat(32, 32)", white, left):$hex.edge(4, 2)

  }

  // Labels below each hex


}
