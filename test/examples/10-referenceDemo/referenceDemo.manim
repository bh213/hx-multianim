version: 0.5

#referenceDemoItem programmable(width:int, height:int, shape:[rect, triangle], c1:color=white) {
  @(shape=>rect) bitmap(generated(color($width, $height, $c1)));
  @(shape=>triangle) pixels (
    line 0,0, 0, $height, #f00
    line 0,$height, $width, $height, #f00
    line $width,$height, 0, 0, #f00
  );
}

#referenceDemo programmable() {
  pos: 0, 0
  grid: 1280, 720

  @alpha(0.3) bitmap(generated(color(1280, 720, #555)));

  staticRef($referenceDemoItem, width=>160, height=>160, shape=>rect): 80,120;
  staticRef($referenceDemoItem, width=>320, height=>320, shape=>triangle): 80, 360;
  staticRef($referenceDemoItem, width=>500, height=>200, shape=>triangle): 500, 120;
  staticRef($referenceDemoItem, width=>320, height=>320, shape=>triangle): 700, 360;
}
