  text(dd, "top-left", white, left, 200): 288, 80
  @scale(4) bitmap(sheet("demo", "tile-topleft"), left, top): 340, 152
  rect(#FF69B4, filled, 24, 24): 340-12, 152-12


  // Bottom-right alignment: position is bottom-right corner of tile
  text(dd, "bot-right", white, left, 200): 516, 80
  @scale(4) bitmap(sheet("demo", "tile-bottomright"), right, bottom): 716, 248
  rect(#FF69B4, filled, 24, 24): 716-12, 248-12

  // Row 2: Indexed tiles 0-3 and ninepatch
  text(dd, "idx 0-3", white, left, 200): 60, 300
