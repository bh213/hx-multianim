  grid: 1280, 720

  @alpha(0.1) bitmap(generated(color(1280, 720, white)));

  // Row 1: Alignment demo - tiles at same Y (200), spaced apart

  // Center alignment: position is center of tile
  text(dd, "center", white, left, 200): 60, 80
  @scale(4) bitmap(sheet("demo", "tile-center"), center): 108, 200
  rect(#FF69B4, filled, 24, 24): 108-12, 200-12


