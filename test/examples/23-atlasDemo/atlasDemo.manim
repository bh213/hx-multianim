  @scale(4) bitmap(sheet("demo", "indexed-tile", 3), left, top): 420, 360
  rect(#FF69B4, 4, 104, 104): 416, 356

  text(dd, "9patch", white, left, 200): 560, 300
  ninepatch("demo", "ninepatch-demo", 192, 192): 560, 360
  rect(#FF69B4, 4, 200, 200): 556, 356
}
