version: 0.5

#bitmapDemo programmable() {
  pos: 0, 0
  grid: 1280, 720

  @alpha(0.3) bitmap(generated(color(1280, 720, blue)));

  @scale(6) bitmap(sheet("crew2", "marine_l_killed", 0), center):150,200
  @scale(6) bitmap(sheet("crew2", "marine_l_killed", 1), center):350,200
  @scale(6) bitmap(sheet("crew2", "marine_l_killed", 2), center):550,200
  @scale(6) bitmap(sheet("crew2", "marine_l_killed", 3), center):750,200

  point {
    pos: 500, 450

    scale: 10;
    bitmap(sheet("crew2", "marine_r_shooting_d"), center);
    @alpha(0.5) bitmap(sheet("crew2", "marine_r_shooting_d"), center):-40,0;
    @alpha(0.3) bitmap(sheet("crew2", "marine_r_shooting_d"), center):-80,0;
  }
}

#main point {
  pos: 0, 0
  staticRef($bitmapDemo):0,0
}
