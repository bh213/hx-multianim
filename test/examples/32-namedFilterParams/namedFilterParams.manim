version: 0.5

/*
  This test demonstrates:
  - Block comments (this is one!)
  - Named parameters for filters
*/

#namedFilterParams programmable() {
    /* outline with named params */
    bitmap(generated(color(40, 40, #4488ff))) {
        filter: outline(size: 2, color: #ff0000)
        pos: 10, 10
    }

    /* blur with named params */
    bitmap(generated(color(40, 40, #44ff88))) {
        filter: blur(radius: 2, gain: 1.5)
        pos: 80, 10
    }

    /* brightness with named param */
    bitmap(generated(color(40, 40, #ff4488))) {
        filter: brightness(value: 1.5)
        pos: 150, 10
    }

    /* saturate with named param */
    bitmap(generated(color(40, 40, #ffaa44))) {
        filter: saturate(value: 0.5)
        pos: 220, 10
    }

    // positional syntax still works
    bitmap(generated(color(40, 40, #4488ff))) {
        filter: outline(2, #00ff00)
        pos: 10, 80
    }

    bitmap(generated(color(40, 40, #44ff88))) {
        filter: blur(2, 1.5)
        pos: 80, 80
    }

    /* blur with extra named params: quality and linear */
    bitmap(generated(color(40, 40, #88ffcc))) {
        filter: blur(radius: 3, gain: 1.0, quality: 2, linear: 1.0)
        pos: 150, 80
    }
}
