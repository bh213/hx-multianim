version: 0.3

#codegenDialog programmable(w:uint=300, h:uint=200, title="Dialog", body="Hello world", style:[idle, hover, disabled]=idle) {
      // Panel background
      @(style=>idle) ninepatch("ui", "Window_3x3_idle", $w, $h): 0, 0
      @(style=>hover) ninepatch("ui", "Window_3x3_hover", $w, $h): 0, 0
      @(style=>disabled) ninepatch("ui", "Window_3x3_disabled", $w, $h): 0, 0

      // Title bar text
      text(dd, $title, 0xFFDD44, center, 280): 10, 8

      // Separator line (thin ninepatch)
      ninepatch("ui", "Sliderbar_H_3x1", $w - 20, 4): 10, 25

      // Body text
      text(dd, $body, 0xCCCCCC, center, 280): 10, 35

      // OK button at bottom
      ninepatch("ui", "button-idle", 60, 20): $w - 70, $h - 30
      text(dd, "OK", white, center, 60): $w - 70, $h - 23
}
