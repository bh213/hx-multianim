version: 0.5

layouts {
  #testLayout list {
    point: 10, 10
    point: 60, 10
    point: 110, 10
    point: 10, 40
    point: 60, 40
  }

  #seqLayout sequence($i: 0..3) point: $i * 50 + 10, 80
}

#codegenLayout programmable() {
  // List layout: 5 points
  repeatable($index, layout("main", "testLayout")) {
    pos: 0, 0
    ninepatch("ui", "button-idle", 40, 20): 0, 0
  }

  // Sequence layout: 4 points (0, 1, 2, 3)
  repeatable($j, layout("main", "seqLayout")) {
    pos: 0, 0
    ninepatch("ui", "button-pressed", 40, 20): 0, 0
  }
}
