version: 0.3

#codegenTilesIter programmable() {
  // TilesIterator with filter: iterate frames of specific tile
  repeatable($index, tiles($bitmap, "crew2", "Arrow_dir0")) {
    bitmap($bitmap): 10 + $index * 40, 10;
  }

  // StateAnimIterator: iterate animation frames
  repeatable($index, stateanim($bitmap, "marine.anim", "idle", direction=>r)) {
    bitmap($bitmap): 10 + $index * 80, 60;
  }
}
