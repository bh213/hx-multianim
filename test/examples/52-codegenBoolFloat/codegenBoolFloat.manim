version: 0.3

#codegenBoolFloat programmable(showBorder:bool=true, showLabel:bool=false, opacity:float=0.8, barWidth:float=1.5) {
      // Bool: toggle which border style is shown
      @(showBorder=>true) ninepatch("ui", "button-hover", 200, 50): 10, 10
      @(showBorder=>false) ninepatch("ui", "button-disabled", 200, 50): 10, 10

      // Bool: conditionally show label text
      @(showLabel=>true) text(dd, "Label Visible", white, left, 200): 15, 25

      // Float: alpha controlled by parameter
      @alpha($opacity) ninepatch("ui", "button-idle", 180, 30): 10, 70

      // Float: used in expression for width
      ninepatch("ui", "Sliderbar_H_3x1", 100 * $barWidth, 15): 10, 110

      // Fixed label
      text(dd, "boolFloat", white, left, 200): 10, 140
}
