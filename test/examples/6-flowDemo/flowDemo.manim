version: 0.3

#flowDemo programmable() {
  pos: 0, 0
  grid: 1280, 720

  @alpha(0.3) bitmap(generated(color(1280, 720, orange)));
  point {
    pos: 20, 80
    flow(maxWidth:800, maxHeight:400, minWidth:800, minHeight:400, layout:vertical, padding:0, debug:1) {
      text(dd, "test left", red, left);
      text(m3x6, "test center", blue, center);
      text(pixeled6, "test right", 0xF00, right);
    }
  }
  @scale(4) text(dd, "WIP", red, center, 400):400,160
}
